<Window x:Class="De1.WindowSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De1"
        mc:Ignorable="d"
        Title="WindowSearch" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid Name="data" AutoGenerateColumns="False" AlternatingRowBackground="Blue">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ma phong" Binding="{Binding MaPhong}"/>
                <DataGridTextColumn Header="Ten phong" Binding="{Binding TenPhong}"/>
                <DataGridTextColumn Header="So luong nhan vien" Binding="{Binding SoLuong}"/>
                <DataGridTextColumn Header="Tong so luong" Binding="{Binding TongLuong}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
