<Window x:Class="de16720.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:de16720"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" Loaded="Window2_Loaded">
    <Grid>
        <DataGrid Name="data" HorizontalAlignment="Center" Height="134" Margin="0,23,0,0" VerticalAlignment="Top" Width="740" AutoGenerateColumns="False" AlternatingRowBackground="AntiqueWhite" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ma danh muc" Binding="{Binding MaDm}"/>
                <DataGridTextColumn Header="Ten danh muc" Binding="{Binding TenDm}"/>
                <DataGridTextColumn Header="Tong tien cac mat hang" Binding="{Binding TongTienDM}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
